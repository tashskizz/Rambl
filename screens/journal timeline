    <script>
        let currentlyPlaying = null;
        let progressIntervals = {};

        // Play/pause functionality
        function togglePlay(button) {
            const isCurrentlyPlaying = button.classList.contains('playing');
            
            // Stop any currently playing audio
            if (currentlyPlaying && currentlyPlaying !== button) {
                currentlyPlaying.classList.remove('playing');
                currentlyPlaying.innerHTML = '▶️';
                clearInterval(progressIntervals[currentlyPlaying.dataset.id]);
            }
            
            if (isCurrentlyPlaying) {
                // Pause current audio
                button.classList.remove('playing');
                button.innerHTML = '▶️';
                clearInterval(progressIntervals[button.dataset.id]);
                currentlyPlaying = null;
            } else {
                // Play audio
                button.classList.add('playing');
                button.innerHTML = '⏸️';
                currentlyPlaying = button;
                
                // Simulate audio progress
                const progressBar = button.closest('.audio-player').querySelector('.waveform-progress');
                const duration = getDurationFromText(button.closest('.audio-player').querySelector('.audio-duration').textContent);
                let progress = 0;
                const interval = 100; // Update every 100ms
                const increment = 100 / (duration * 10); // Progress increment per 100ms
                
                button.dataset.id = Math.random().toString(36).substr(2, 9);
                
                progressIntervals[button.dataset.id] = setInterval(() => {
                    progress += increment;
                    progressBar.style.width = Math.min(progress, 100) + '%';
                    
                    if (progress >= 100) {
                        button.classList.remove('playing');
                        button.innerHTML = '▶️';
                        clearInterval(progressIntervals[button.dataset.id]);
                        currentlyPlaying = null;
                        progressBar.style.width = '0%';
                    }
                }, interval);
            }
        }

        // Extract duration in seconds from text like "7:42 minutes"
        function getDurationFromText(text) {
            const match = text.match(/(\d+):(\d+)/);
            if (match) {
                return parseInt(match[1]) * 60 + parseInt(match[2]);
            }
            return 300; // Default 5 minutes
        }

        // Filter functionality
        document.querySelectorAll('.filter-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.filter-tab').forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                
                const filter = tab.dataset.filter;
                filterEntries(filter);
            });
        });

        function filterEntries(filter) {
            const timelineGroups = document.querySelectorAll('.timeline-group');
            const today = new Date();
            
            timelineGroups.forEach(group => {
                const dateHeader = group.querySelector('.date-header').textContent;
                let shouldShow = true;
                
                if (filter === 'week') {
                    // Show only entries from the last 7 days
                    if (dateHeader.includes('Monday, June 2')) {
                        shouldShow = false;
                    }
                } else if (filter === 'month') {
                    // Show only entries from this month (June)
                    shouldShow = dateHeader.includes('June');
                }
                
                group.style.display = shouldShow ? 'block' : 'none';
                if (shouldShow) {
                    group.style.animation = 'slideIn 0.3s ease-out';
                }
            });
        }

        // Action button handlers
        document.querySelectorAll('.action-button').forEach(button => {
            button.addEventListener('click', (e) => {
                e.stopPropagation();
                
                const action = button.textContent.trim();
                let message = '';
                
                if (action.includes('Save to Highlights')) {
                    message = 'Entry saved to highlights ✓';
                    button.style.background = 'rgba(5, 150, 105, 0.1)';
                    button.style.borderColor = '#059669';
                    button.style.color = '#059669';
                } else if (action.includes('View Transcript')) {
                    message = 'Opening transcript view...';
                } else if (action.includes('Share')) {
                    message = 'Opening share options...';
                }
                
                showNotification(message);
                
                // Reset button style after 2 seconds
                if (action.includes('Save to Highlights')) {
                    setTimeout(() => {
                        button.style.background = 'none';
                        button.style.borderColor = 'rgba(139, 92, 246, 0.2)';
                        button.style.color = '#8b5cf6';
                    }, 2000);
                }
            });
        });

        // Load more entries
        function loadMoreEntries() {
            const timeline = document.getElementById('timeline');
            const loadMoreButton = document.querySelector('.load-more-button');
            
            loadMoreButton.textContent = 'Loading...';
            loadMoreButton.disabled = true;
            
            setTimeout(() => {
                // Add older entries
                const olderEntries = `
                    <div class="timeline-group">
                        <div class="date-header">Friday, May 31</div>
                        <div class="journal-entry">
                            <div class="recording-limit-indicator">6:15 / 10:00</div>
                            <div class="entry-header">
                                <div class="entry-meta">
                                    <span class="entry-time">8:00 PM</span>
                                    <span class="entry-category">🔮 Future</span>
                                </div>
                                <h3 class="entry-title">Month-End Reflection</h3>
                                <p class="entry-prompt">"What are your hopes for the coming month?"</p>
                            </div>
                            <div class="entry-content">
                                <div class="audio-player">
                                    <div class="player-controls">
                                        <button class="play-button" onclick="togglePlay(this)">▶️</button>
                                        <div class="player-info">
                                            <div class="audio-duration">6:15 minutes</div>
                                            <div class="audio-quality">Good quality • Thoughtful pace</div>
                                        </div>
                                    </div>
                                    <div class="waveform">
                                        <div class="waveform-progress"></div>
                                        <div class="waveform-bars">
                                            ${generateWaveformBars()}
                                        </div>
                                    </div>
                                </div>
                                <div class="entry-insights">
                                    <div class="insight-title">
                                        <span>🧠</span>
                                        <span>AI Insights</span>
                                    </div>
                                    <div class="insight-tags">
                                        <span class="insight-tag">Future Planning</span>
                                        <span class="insight-tag">Optimism</span>
                                        <span class="insight-tag">Goal Setting</span>
                                    </div>
                                    <div class="insight-mood">Mood: Hopeful and Forward-looking (4.1/5)</div>
                                </div>
                            </div>
                            <div class="entry-actions">
                                <button class="action-button">
                                    <span>💾</span>
                                    <span>Save to Highlights</span>
                                </button>
                                <button class="action-button">
                                    <span>📝</span>
                                    <span>View Transcript</span>
                                </button>
                                <button class="action-button">
                                    <span>🔗</span>
                                    <span>Share</span>
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                
                timeline.insertAdjacentHTML('beforeend', olderEntries);
                
                // Re-add event listeners to new action buttons
                addActionButtonListeners();
                
                loadMoreButton.textContent = 'Load Earlier Entries';
                loadMoreButton.disabled = false;
            }, 1500);
        }

        function generateWaveformBars() {
            let bars = '';
            for (let i = 0; i < 16; i++) {
                const height = Math.random() * 60 + 30; // Random height between 30-90%
                bars += `<div class="waveform-bar" style="height: ${height}%;"></div>`;
            }
            return bars;
        }

        function addActionButtonListeners() {
            // Re-apply event listeners to newly added action buttons
            document.querySelectorAll('.action-button:not([data-listener])').forEach(button => {
                button.dataset.listener = 'true';
                button.addEventListener('click', (e) => {
                    e.stopPropagation();
                    
                    const action = button.textContent.trim();
                    let message = '';
                    
                    if (action.includes('Save to Highlights')) {
                        message = 'Entry saved to highlights ✓';
                        button.style.background = 'rgba(5, 150, 105, 0.1)';
                        button.style.borderColor = '#059669';
                        button.style.color = '#059669';
                    } else if (action.includes('View Transcript')) {
                        message = 'Opening transcript view...';
                    } else if (action.includes('Share')) {
                        message = 'Opening share options...';
                    }
                    
                    showNotification(message);
                    
                    if (action.includes('Save to Highlights')) {
                        setTimeout(() => {
                            button.style.background = 'none';
                            button.style.borderColor = 'rgba(139, 92, 246, 0.2)';
                            button.style.color = '#8b5cf6';
                        }, 2000);
                    }
                });
            });
        }

        // Back navigation
        function goBack() {
            alert('Returning to Analytics dashboard...');
        }

        // Navigation handling
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', () => {
                document.querySelectorAll('.nav-item').forEach(i => i.classList.remove('active'));
                item.classList.add('active');
            });
        });

        // Notification system
        function showNotification(message) {
            const existingNotification = document.querySelector('.notification');
            if (existingNotification) {
                existingNotification.remove();
            }

            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.style.cssText = `
                position: fixed;
                top: 80px;
                left: 50%;
                transform: translateX(-50%);
                background: linear-gradient(135deg, #059669 0%, #10b981 100%);
                color: white;
                padding: 12px 20px;
                border-radius: 25px;
                font-size: 14px;
                font-weight: 500;
                box-shadow: 0 4px 20px rgba(5, 150, 105, 0.3);
                z-index: 1000;
                animation: slideDown 0.3s ease-out;
            `;
            notification.textContent = message;

            if (!document.querySelector('#notificationStyles')) {
                const style = document.createElement('style');
                style.id = 'notificationStyles';
                style.textContent = `
                    @keyframes slideDown {
                        from {
                            opacity: 0;
                            transform: translateX(-50%) translateY(-20px);
                        }
                        to {
                            opacity: 1;
                            transform: translateX(-50%) translateY(0);
                        }
                    }
                `;
                document.head.appendChild(style);
            }

            document.body.appendChild(notification);

            setTimeout(() => {
                notification.style.animation = 'slideDown 0.3s ease-out reverse';
                setTimeout(() => {
                    notification.remove();
                }, 300);
            }, 3000);
        }

        // Entry hover effects
        document.querySelectorAll('.journal-entry').forEach(entry => {
            entry.addEventListener('mouseenter', () => {
                entry.style.transform = 'translateY(-2px)';
            });
            
            entry.addEventListener('mouseleave', () => {
                entry.style.transform = 'translateY(0)';
            });
        });
    </script>
</body>
</html>
